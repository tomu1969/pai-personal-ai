# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pai_db
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_LOGGING=true

# Test Database
TEST_DB_NAME=pai_test

# Evolution API Configuration
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your_evolution_api_key
EVOLUTION_INSTANCE_ID=your_instance_id
WEBHOOK_URL=https://your-domain.com/webhook

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# Security
JWT_SECRET=your_jwt_secret_key_here
WEBHOOK_SECRET=your_webhook_secret_key

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Assistant Configuration
DEFAULT_ASSISTANT_STATUS=false
AUTO_RESPONSE_TEMPLATE="Hi! This is {{owner_name}}'s personal assistant. I'm currently helping filter messages. What do you need assistance with?"
OWNER_NAME=Your Name
SUMMARY_INTERVAL_HOURS=6

# PAI Assistant Configuration
PAI_ASSISTANT_ENABLED=true
PAI_ASSISTANT_INSTANCE_ID=pai-assistant
PAI_ASSISTANT_OWNER_NAME=Your Name

# PAI Mortgage Configuration
PAI_MORTGAGE_ENABLED=true
PAI_MORTGAGE_INSTANCE_ID=pai-mortgage
PAI_MORTGAGE_OWNER_NAME=Your Name
PAI_MORTGAGE_MAX_LOAN_AMOUNT=1000000
PAI_MORTGAGE_MIN_CREDIT_SCORE=580
PAI_MORTGAGE_MAX_DTI_RATIO=43
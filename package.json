{
  "name": "pai-personal-ai",
  "version": "1.0.0",
  "description": "PAI - Personal AI: Intelligent WhatsApp assistant with AI-powered entity extraction",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "launch": "./launch-pai.sh",
    "launch:debug": "DEBUG=true ./launch-pai.sh --debug",
    "launch:check": "./launch-pai.sh --check-only",
    "check-deps": "./scripts/check-dependencies.sh",
    "monitor": "./scripts/service-monitor.sh",
    "monitor:watch": "./scripts/service-monitor.sh continuous",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write .",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "seed": "sequelize-cli db:seed:all",
    "init-pai-mortgage": "node scripts/initialize-pai-mortgage.js",
    "system-status": "curl -s http://localhost:3000/api/system/status | jq .",
    "pai": "./scripts/pai-mortgage-manager.sh",
    "pai:status": "./scripts/pai-mortgage-manager.sh --status",
    "pai:start": "./scripts/pai-mortgage-manager.sh --start",
    "pai:test": "./scripts/pai-mortgage-manager.sh --test",
    "pai:stop": "./scripts/stop-pai-mortgage-system.sh",
    "pai:restart": "./scripts/restart-pai-mortgage-system.sh"
  },
  "keywords": [
    "personal-ai",
    "whatsapp",
    "ai-assistant",
    "nodejs",
    "react",
    "postgresql",
    "openai",
    "gpt",
    "entity-extraction",
    "evolution-api"
  ],
  "author": "Tomas",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.7",
    "openai": "^5.19.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "qrcode-terminal": "^0.12.0",
    "rate-limiter-flexible": "^2.4.2",
    "sequelize": "^6.32.1",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "sequelize-cli": "^6.6.1",
    "supertest": "^6.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomu1969/pai-personal-ai.git"
  },
  "bugs": {
    "url": "https://github.com/tomu1969/pai-personal-ai/issues"
  },
  "homepage": "https://github.com/tomu1969/pai-personal-ai#readme"
}
